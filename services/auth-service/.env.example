# PostgreSQL Database URL
# Example for local Docker setup: DATABASE_URL="postgresql://auth_user:auth_password@auth-db:5432/auth_db"
DATABASE_URL="postgresql://user:password@localhost:5432/auth_db"

# JWT Secret Key - Generate a strong key, e.g., using: openssl rand -hex 32
SECRET_KEY="your-super-secret-key-please-change-in-production"

# JWT Algorithm
# ALGORITHM="HS256" (already set in code, but can be overridden if needed)

# Access Token Expiration time in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=30
